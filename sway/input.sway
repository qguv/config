# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input {
	type:keyboard {
		xkb_layout us
		xkb_variant colemak
		xkb_options compose:sclk
	}
}

# hide mouse after 5 seconds of inactivity
seat * hide_cursor {
        5000
        when-typing enable
}
