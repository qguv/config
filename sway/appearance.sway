# `man 5 sway-bar`
bar {

	font pango:$font $barstyle $fontsize
	position top

	swaybar_command waybar
	separator_symbol " Â· "

	modifier Mod1
	colors {
		statusline #ffffff
		background #323232
		inactive_workspace #32323200 #32323200 #5c5c5c
	}
}

force_display_urgency_hint 3000
