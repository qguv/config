smart_gaps on
gaps inner 10

smart_borders on
default_border pixel 3

# set wallpaper (with fallback)
output * background $wp fill #222222

font pango:$font $borderstyle $fontsize
for_window [title="." app_id="."] title_format "<b>%title</b> (%app_id)"

